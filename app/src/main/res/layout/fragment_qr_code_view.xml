<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context=".view.fragment.QRCodeViewFragment">

    <!--Qr Main Card-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/qrMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/upper_rounded_corners"
        android:paddingBottom="32dp"
        android:paddingHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/lin_layout_leaderboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_height="wrap_content"
                android:src="@drawable/crown"
                android:layout_width="wrap_content"
                android:layout_weight="0.3"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.7"
                android:paddingStart="10dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CoolMountain"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_height="wrap_content"
                        android:src="@drawable/"
                        android:layout_width="wrap_content"
                        android:layout_weight="0.3"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </LinearLayout>

        <!--Score Card-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/score_card_layout"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/all_rounded_corners_lb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lin_layout_leaderboard_title"
            >

            <TextView
                android:id="@+id/score_leaderboard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/by_score"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/score_leaderboard_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="PlayerId: Score Pt"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/score_leaderboard_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--QR Scanned Card-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/qr_scanned_card_layout"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/all_rounded_corners_lb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score_card_layout">

            <TextView
                android:id="@+id/qr_scanned_leaderboard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/by_qr_scanned"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/qr_scanned_leaderboard_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="PlayerId: # QR"
                android:textSize="16sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/qr_scanned_leaderboard_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="224dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="107dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            tools:src="@tools:sample/avatars[8]" />

        <TextView
            android:id="@+id/QRCodeName"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="40dp"
            android:text="QRCodeName"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:autoSizeTextType="none" />

        <TextView
            android:id="@+id/QRCodeScore"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="70dp"
            android:text="Score: 195 Pt"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:autoSizeTextType="none" />

        <ImageView
            android:id="@+id/deleteQRCodeButton"
            android:layout_width="47dp"
            android:layout_height="39dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="50dp"
            android:src="@android:drawable/ic_menu_delete" />

        <androidx.cardview.widget.CardView
            android:layout_width="288dp"
            android:layout_height="112dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="110dp"
            app:cardBackgroundColor="#6B3F51B5"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/QRCodeScanDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:text="Scanned On: Jan 26, 15:35"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/QRCardLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="25dp"
                android:text="Location: Edmonton, AB"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/viewOtherPlayersButton"
                android:layout_width="186dp"
                android:layout_height="37dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="45dp"
                android:text="View Other Players"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/viewOnMapButton"
                android:layout_width="186dp"
                android:layout_height="32dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="80dp"
                android:text="View On Map"
                android:textColor="@color/black"
                android:textSize="10sp" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="224dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        app:cardCornerRadius="50dp" >

        <TextView
            android:id="@+id/snapshotHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Snapshot" />

        <ImageView
            android:id="@+id/QRCodeSnapshot"
            android:layout_width="263dp"
            android:layout_height="153dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            tools:src="@tools:sample/avatars[2]" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="224dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        app:cardCornerRadius="50dp" >

        <TextView
            android:id="@+id/commentsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Comments:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="173dp" />

    </androidx.cardview.widget.CardView>


</LinearLayout>


